{
  "name": "@tapsioss/ripple-node",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "keywords": [
    "ripple",
    "sdk",
    "typescript",
    "node",
    "nodejs",
    "event-tracking",
    "event-logging"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tap30/ripple-ts.git",
    "directory": "packages/node"
  },
  "bugs": {
    "url": "https://github.com/Tap30/ripple-ts/issues"
  },
  "scripts": {
    "clear": "shx rm -rf dist",
    "test": "vitest run --root .",
    "test:watch": "vitest --root .",
    "bundle": "tsdown",
    "build": "run-s clear bundle",
    "release": "pnpm publish . --tag latest --access public --no-git-checks"
  }
}
